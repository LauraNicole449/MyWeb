---
import Nav from '../components/Nav.astro';
import Profile from '../components/Profile.astro';
import Content from '../components/Content.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout>
	<Nav alias="Contact"/>
	<div class="container">
		<Profile />
		<Content>
			<h1>Contact</h1>
			<section>
				<p>
					I am always open to discussing <b>new projects, opportunities in tech world,
					</b>partnerships and more so <b>mentorship.</b>
				</p>
				<form action="">
					<label for="name">Name: </label>
  					<input type="text" id="name" name="name"><br>
					<hr>
					<label for="name">Email: </label>
  					<input type="text" id="email" name="email"><br>
					<hr>
					<label for="name" id="coso">Message: </label>
					<textarea></textarea><br>
					<hr>
					<button>Submit</button>
				</form>
			</section>
		</Content>
	</div>
</Layout>

<style>
	.container {
		display: flex; 
		justify-content: center;
		column-gap: 0.5rem;
	}
	h1{
	font-weight: 500;
	margin-bottom: 20px;
	margin-top: 20px;
  	font-size: 40px;
}
section{
	height: 490px;
	width: 720px;
	background-color: #F8FBFB;
	border-radius: 20px;
}
p{
	padding-top: 45px;
	margin: 30px;
	font-size: 18px;
}
hr{
	width: 645px;
	background-color: #B5B5B5;
	opacity: 0.3;
}
label{
	font-weight: 550;
	margin-left: 35px;
	margin-right: 15px;
	font-size: 18px;
}
#coso{
	position: relative;
    top: -108px; /* Ajusta la posici√≥n vertical */   
}
input{
	border: none; /* Elimina el borde */
	outline: none; /* Elimina el borde al hacer clic */
	background-color: #F8FBFB;
	width: 500px;
}
textarea{
	margin-top: 2px;
	border: none; /* Elimina el borde */
  	outline: none; /* Elimina el borde al hacer clic */
	resize: none;
	width: 480px;
	height: 120px;
	background-color: #F8FBFB;
}
button{
	cursor: pointer;
	width: 110px;
	height: 50px;
	border-radius: 25px;
	margin:15px;
	margin-left: 35px;
	background-color: #F8FBFB;
	border-style: solid;
    border-color: orange;
    border-width: 2px;
	font-weight:50;
	font-size: 18px;
}
</style>